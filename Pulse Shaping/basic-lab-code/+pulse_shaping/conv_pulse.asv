function [s,t] = conv_pulse(x,pulse,n_os,symbol_rate)
%CONV_PULSE 

s = zeros(1,length(pulse) + (length(x)-1)*n_os);
t = zeros(size(s));

x_os = kron(x, [1 zeros(1, n_os-1)]); %oversampling with zeros 
                                      % x * [1 0 0 0]
s_full = conv(x_os, pulse, 'full');
s = s_full(1:length(x)*n_os); % cutting of the tail after convolution

os_rate = symbol_rate * n_os;
t = 0 : 1/os_rate : (length(s)-1)/os_rate;

end

